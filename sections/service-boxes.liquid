          "label": "Icon Background Color",
          "options": [
            {
              "value": "blue-100",
              "label": "Light Blue"
            },
            {
              "value": "indigo-100",
              "label": "Light Indigo"
            },
            {
              "value": "purple-100",
              "label": "Light Purple"
            },
            {
              "value": "green-100",
              "label": "Light Green"
            },
            {
              "value": "red-100",
              "label": "Light Red"
            },
            {
              "value": "yellow-100",
              "label": "Light Yellow"
            },
            {
              "value": "gray-100",
              "label": "Light Gray"
            }
          ],
          "default": "blue-100"
        },
        {
          "type": "select",
          "id": "icon_color",
          "label": "Icon Color",
          "options": [
            {
              "value": "blue-600",
              "label": "Blue"
            },
            {
              "value": "indigo-600",
              "label": "Indigo"
            },
            {
              "value": "purple-600",
              "label": "Purple"
            },
            {
              "value": "green-600",
              "label": "Green"
            },
            {
              "value": "red-600",
              "label": "Red"
            },
            {
              "value": "yellow-600",
              "label": "Yellow"
